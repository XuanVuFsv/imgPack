/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@layouts/*": [
          "app/layouts/*"
      ],
      "@core/*": [
          "app/core/*"
      ],
      "@services/*": [
          "app/services/*"
      ],
      "@page/*": [
          "app/page/*"
      ],
      "@modules/*": [
          "app/modules/*"
      ],
      "@components/*": [
          "app/components/*"
      ],
      "@config/*": [
          "config/*"
      ],
      "@env/*": [
          "environments/*"
      ],
      "@testing/*": [
          "testing/*"
      ]
  }
  }
}
